<div class="tabs-spacer" style="display:none;">

<?php
// blibliotecas
require_once("../../conexao.php");
$cfg->set_model_directory('../../models/');

$FRM_vendor_id    = isset( $_GET['vendedor_id'])    ? $_GET['vendedor_id']            : tool::msg_erros("O Campo vendedor_id é Obrigatorio.");

$Query_vendedores=conv_vendor::find_by_sql("SELECT convenios.id,convenios.nm_fantasia,conv_vendor.status FROM conv_vendor LEFT JOIN convenios ON convenios.id = conv_vendor.convenios_id WHERE vendedores_id='".$FRM_vendor_id."' ORDER BY id");

$List_vendedores   = new ArrayIterator($Query_vendedores);


$lf="1";
?>
</div>

