<div id="GridSubconvenios" style="height:380px; overflow-y:scroll;">
<table  class="uk-table uk-table-striped uk-table-hover" >
  <tbody >
<?php
// laço que loopa os lançamentos dos convenios  agrupando por data
$List_vendor= new ArrayIterator($List_vendedores);
while($List_vendor->valid()):

?>
    <tr style="line-height: 20px;" data-sub="<?php echo $List_vendor->current()->id; ?>">
        <th class="uk-width uk-text-center " style="width:20px;" ><?php echo $lf; ?></th>
        <td class=" uk-text-left uk-text-uppercase"   ><?php echo $List_vendor->current()->nm_fantasia; ?></td>
        <td class="uk-text-center" ><td class="uk-width uk-text-center" style="width:100px;" >
        <?php if($List_vendor->current()->status == 0): ?>
        <a class="uk-icon-check uk-icon-medium BtnEnabledSub" style="margin-left:10px;" data-uk-tooltip="{pos:'left'}" title="Habilitar" data-cached-title="Habilitar"></a>
        <?php else: ?>
        <a class="uk-icon-times-circle uk-icon-medium BtnDisabledSub" style="margin-left:10px;" data-uk-tooltip="{pos:'left'}" title="Desabilitar" data-cached-title="Desabilitar"></a>
        <?php endif; ?>
        </td>
    </tr>
<?php
$lf++;
$List_vendor->next();
endwhile;
?>
</tbody>
</table>
